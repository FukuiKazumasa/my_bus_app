<header>


      <div class="header-container">
      <div class="header-container2">
        <%= link_to image_tag("application-logo-header.png", class:"application-logo-header"), "/" %>
      </div>
        <nav class="navbar navbar-expand-lg navbar-light bg-light">
         <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
          <span class="navbar-toggler-icon"></span>
         </button>

          <div class="collapse navbar-collapse" id="navbarSupportedContent">
            <ul class="navbar-nav mr-auto">
            
              <li class="nav-item active">
                <%= link_to "ホーム", posts_path, {class: "navbar-brand"} %>
              </li>

              <li class="nav-item active">
                <% if user_signed_in? %>
                <%= link_to 'ログアウト', destroy_user_session_path, method: :delete , class: "navbar-brand" %>
                <% else %> 
                <%= link_to "ログイン", new_user_session_path , class: "navbar-brand" %>
                <% end %>
              </li>
            </ul> 
          </div>
        </nav>
      </div>
</header>

<br><br><br><br><br><br><br><br>

<div class="profile">

<h2><% if current_user.id == @user.id %>
    マイページ
    <% else %>
    投稿者プロフィール
    <% end %>
</h2>

<br>
  <div class="field">
    <span class='title'>ペンネーム</span><br>
    <span><%= @user.name %></span>
  </div>

  <div class="field">
    <% if current_user.id == @user.id %>
    <span class='title'>メールアドレス</span><br>
    <span><%= @user.email %></span>
    <% end %>
  </div>

  <div class="field">
    <span class='title'>プロフィール</span><br>
    <span><%= @user.profile %></span>
  </div>

  <div class="field">
    <span class='title'>性別</span><br>
    <span><%= @user.gender %></span>
  </div>

  <div class="all-buttons">
  
    <% if current_user.id == @user.id %>
    <%= link_to edit_user_registration_path do %>
    <button class="button">編集</button>
    <% end %>

    <%= link_to posts_path do %>
    <button class="button">投稿一覧</button>
    <% end %>  
    
    <% else %>
    
    <%= link_to posts_path do %>
    <button class="button">投稿一覧</button>
    <% end %>  
    
    <% end %>

  </div>


</div>

</div>